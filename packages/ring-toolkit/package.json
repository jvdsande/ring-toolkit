{
  "name": "ring-toolkit",
  "version": "0.0.6",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "description": "All in one toolkit for web app development",
  "license": "MIT",
  "repository": "https://github.com/jvdsande/ring-toolkit",
  "author": "Jérémie van der Sande <jeremie.vandersande@gmail.com>",
  "main": "./dist/index.js",
  "bin": {
    "ring-toolkit": "./dist/bin.js",
    "rtk": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "import": "./index.mjs",
      "require": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "*.d.ts",
    "*.js",
    "*.mjs",
    "dist",
    "src"
  ],
  "dependencies": {
    "@ring-toolkit/depcheck": "0.0.1",
    "@ring-toolkit/executable": "0.0.1",
    "@ring-toolkit/logger": "0.0.1",
    "@ring-toolkit/pipeline": "0.0.1",
    "@ring-toolkit/rollup": "0.0.1",
    "@ring-toolkit/serve": "0.0.1",
    "@ring-toolkit/web-dev-server": "0.0.1",
    "@ring-toolkit/web-test-runner": "0.0.1",
    "@web/config-loader": "^0.1.3",
    "@web/dev-server-core": "^0.3.16",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.1",
    "nanocolors": "^0.2.1"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.2.0",
    "@types/command-line-usage": "^5.0.2"
  }
}
